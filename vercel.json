{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/tomato/price-compare",
      "dest": "/api/tomato-price-compare.js"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    },
    {
      "src": "/",
      "dest": "/public/tomato-dashboard.html"
    }
  ],
  "env": {
    "NAVER_CLIENT_ID": "@naver_client_id",
    "NAVER_CLIENT_SECRET": "@naver_client_secret",
    "KAMIS_API_KEY": "@kamis_api_key",
    "KAMIS_CERT_ID": "@kamis_cert_id"
  }
}
