{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/tomato/price-compare",
      "dest": "/api/tomato-price-compare.js"
    },
    {
      "src": "/api/general-search",
      "dest": "/api/general-search.js"
    },
    {
      "src": "^/$",
      "dest": "/public/tomato-dashboard.html"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ]
}
